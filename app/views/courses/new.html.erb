<h1>New Course Form</h1>
<% if flash[:errors] %>
  <% flash[errors].each do |error| %>
    <p style="color: red"><%= error %></p>
  <% end %>
<% end %>

<%= form_for @course do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.submit %>
<% end %>

<br />

<%= button_to "Back to Course List", courses_path, method: :get %>